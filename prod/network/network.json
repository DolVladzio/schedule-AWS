{
	"aws_region": "eu-central-1",

	"vpc": {
		"vpc": {
			"name": "main-vpc",
			"vpc_cidr_block": "10.1.0.0/16",
			"eip_domain": "vpc",
			"eips": [
				"dev-vpc-eip",
				"main-vpc-eip"
			],
			"subnets": [
				{
					"name": "vpc-subnet",
					"cidr_block": "10.1.1.0/24",
					"public": true,
					"zone": "a"
				},
				{
					"name": "vpc-db-private-subnet-1",
					"cidr_block": "10.1.2.0/24",
					"public": false,
					"zone": "a"
				},
				{
					"name": "vpc-db-private-subnet-2",
					"cidr_block": "10.1.3.0/24",
					"public": false,
					"zone": "b"
				},
				{
					"name": "vpc-eks-private-subnet-1",
					"cidr_block": "10.1.4.0/24",
					"public": false,
					"zone": "a"
				},
				{
					"name": "vpc-eks-private-subnet-2",
					"cidr_block": "10.1.5.0/24",
					"public": false,
					"zone": "b"
				},
				{
					"name": "vpc-eks-private-subnet-3",
					"cidr_block": "10.1.6.0/24",
					"public": false,
					"zone": "c"
				}
			]
		}
	},
	"security_groups": {
		"eks-node-sg": {
			"name": "eks-node-sg",
			"vpc_name": "main-vpc",
			"description": "Security group for EKS worker nodes",
			"attach_to": "eks-node",
			"ingress": [
				{
					"protocol": "tcp",
					"port": 22,
					"source": "public"
				},
				{
					"protocol": "tcp",
					"port": 443,
					"source": "eks-node-sg"
				},
				{
					"protocol": "tcp",
					"port": 10250,
					"source": "eks-node-sg"
				},
				{
					"protocol": "udp",
					"port": 8472,
					"source": "eks-node-sg"
				},
				{
					"protocol": "tcp",
					"port": 30000,
					"source": "public"
				},
				{
					"protocol": "tcp",
					"port": 32767,
					"source": "public"
				},
				{
					"protocol": "tcp",
					"port": 5432,
					"source": "db-sg"
				}
			],
			"egress": [
				{
					"protocol": "0",
					"port": 0,
					"destination": "public"
				}
			]
		},
		"db-sg": {
			"name": "db-sg",
			"vpc_name": "main-vpc",
			"attach_to": "maindb",
			"description": "Security group for PostgreSQL database",
			"ingress": [
				{
					"protocol": "tcp",
					"port": 5432,
					"source": "bastion-sg"
				}
			],
			"egress": [
				{
					"protocol": "0",
					"port": 0,
					"destination": "0.0.0.0/0"
				}
			]
		},
		"bastion-sg": {
			"name": "bastion-sg",
			"vpc_name": "main-vpc",
			"attach_to": "bastion",
			"description": "Security group for Bastion VM",
			"ingress": [
				{
					"protocol": "tcp",
					"port": 22,
					"source": "0.0.0.0/0"
				},
				{
					"protocol": "tcp",
					"port": 80,
					"source": "0.0.0.0/0"
				}
			],
			"egress": [
				{
					"protocol": "0",
					"port": 0,
					"destination": "0.0.0.0/0"
				}
			]
		}
	}
}