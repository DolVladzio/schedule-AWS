{
	"aws_region": "eu-west-1",
	"aws_backup_vault_name": "dev-postgres-db-backup-vault",

	"secret_manager": {
		"dev-postgresql-db-credentials": {
			"name": "dev-postgresql-db-credentials",
			"secret_id": "arn:aws:secretsmanager:eu-central-1:789279989320:secret:postgresql-db-credentials-VKzTw5",
			"username": "postgres",
			"password": "postgres"
		}
	},

	"db_instances": {
		"dev-postgresql-db": {
			"name": "dev-postgresql-db",
			"engine": "postgres",
			"engine_version": "17.5",
			"instance_class": "db.t3.micro",
			"allocated_storage": 20,
			"max_allocated_storage": 100,
			"storage_type": "gp3",
			"multi_az": false,
			"publicly_accessible": false,
			"storage_encrypted": true,

			"db_name": "dev-maindb",
			"port": 5432,
			"secret_manager_name": "dev-postgresql-db-credentials",
			
			"aws_db_subnet_group_name": "dev-private-db-subnets",
			"subnet_group_name": [
				"dev-vpc-db-private-subnet-1",
				"dev-vpc-db-private-subnet-2"
			],
			"vpc_security_groups": [
				"dev-db-sg"
			],
			"backup_retention_period": 7,
			"backup_window": "03:00-04:00",
			"maintenance_window": "sun:04:00-sun:05:00",
			"deletion_protection": false,
			"skip_final_snapshot": true,
			"final_snapshot_identifier": "dev-postgresql-db-final-snapshot",
			"monitoring_interval": 0,
			"performance_insights_enabled": true,
			"tags": { "db-subnets": "dev-db-subnets", "db": "dev-postgresql-db" }
		}
	}
}